<% if false %>   

<% if current_user.name == "Barath Palanichamy" || current_user.name == "Bharathi Priya" %>
  <% @uploadedImages = Images.all %>
<% else %>
  <% @uploadedImages = Images.where(:user_id => current_user.id) %>
<% end %>

  <div class="row-fluid">
    <div class="span12">
      <div class="carousel slide" id="carousel-591747">
        <ol class="carousel-indicators">
          <li class="active" data-slide-to="0" data-target="#carousel-591747">
          </li>
          <li data-slide-to="1" data-target="#carousel-591747">
          </li>
          <li data-slide-to="2" data-target="#carousel-591747">
          </li>
        </ol>
        <div class="carousel-inner">
            <% @uploadedImages.each_with_index do |i, index| %>
              <% if index == 0%>
                <div class="item active">
              <%else%>
                <div class="item">
              <%end%>
                <img alt=<%= i.caption %> src=<%= i.image_url %> />
                <div class="fr"><%= image_tag(i.user.image_url, :height=>50, :width=>50) %></div>
                <div class="carousel-caption">
                  <h4>
                    <%= i.caption %>
                  </h4>
                </div>
              </div>
            <% end %>
        </div> <a data-slide="prev" href="#carousel-591747" class="left carousel-control">‹</a> <a data-slide="next" href="#carousel-591747" class="right carousel-control">›</a>
      </div>
    </div>
</div>



<% @wish = current_user.wish %>


<% if current_user.name != "Barath Palanichamy" && current_user.name != "Bharathi Priya" %>

<% unless @wish.nil? %>
  <div class="fl">
      <div class="fl"><%= image_tag(current_user.image_url, :height=>50, :width=>50) %></div>

      <div>
        <b><%= @wish.title %></b>
      </div>

      
      <div >
        <b><%= @wish.address %></b>
      </div>

      <br/>
      <div >
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= @wish.wish %>
      </div>

      <br/>

  </div>
<% end %>
<%end%>
  </div>
<% else %>

<div id="counterDiv">
  <%= render partial: 'counter' %> 
  </div>
  
   
</div>
<% end %>